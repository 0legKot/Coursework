@using ConsulService.Models
@model Currency
@{
    ViewData["Title"] = "Currency";
}
<form asp-action="ChangeCurrency" asp-controller="Home">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <h2>Currency</h2>
    <a class="btn btn-danger">Delete</a>
    <h3>This is <input type="text" asp-for="Name" value="@Model.Name" /> currency with id=@Model.Id</h3>
    <h3>Its rate compared to USD: <input type="text" pattern="[0-9]+([,][0-9]{1,2})?" asp-for="Rate" value="@Model.Rate" /></h3>
    <input type="submit" value="Save" class="btn" />
</form>